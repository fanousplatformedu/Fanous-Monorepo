{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"],

      "@app/*": ["src/modules/app/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@user/*": ["src/modules/user/*"],
      "@tenant/*": ["src/modules/tenant/*"],
      "@export/*": ["src/modules/export/*"],
      "@school/*": ["src/modules/school/*"],
      "@scoring/*": ["src/modules/scoring/*"],
      "@counselor/*": ["src/modules/counselor/*"],
      "@assessment/*": ["src/modules/assessment/*"],
      "@notification/*": ["src/modules/notification/*"],
      "@questionnaire/*": ["src/modules/questionnaire/*"],
      "@recommendation/*": ["src/modules/recommendation/*"],

      "@dtos/*": ["src/common/dto/*"],
      "@entities/*": ["src/common/entities/*"],
      "@enums/*": ["src/common/enums/*"],
      "@guards/*": ["src/common/guards/*"],
      "@decorators/*": ["src/common/decorators/*"],
      "@utils/*": ["src/common/utils/*"],
      "@config/*": ["src/config/*"],
      "@prisma/*": ["src/modules/prisma/*"]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
